<resources>

    <!-- Base application theme. -->
    <style name="Base.Theme.Cattle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- AndroidManifest 中使用到的全局默认 AppTheme -->
    <style name="AppTheme" parent="Base.Theme.Cattle">
        <item name="toolbarTextColor">@color/toolbarTextColor</item>
    </style>
    
    <style name="Widget.Cattle" parent="android:Widget"/>

    <!-- TextView -->
    <style name="Widget.Cattle.Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Widget.Cattle.Text.Content">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/grey900</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
    </style>

    <style name="Widget.Cattle.Text.DisplayName">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/grey900</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
    </style>

    <!-- Divider -->
    <style name="Widget.Cattle.Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1.5px</item>
        <item name="android:background">@color/divider_background_color</item>
    </style>

    <!-- ConversationConnector -->
    <style name="Widget.Cattle.ConversationConnector">
        <item name="android:layout_width">4dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/status_connector_color</item>
    </style>

</resources>
